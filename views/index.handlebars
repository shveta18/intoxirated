<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        {{!-- <h1>{{msg}}</h1> --}}
        <h1 id="header">IntoxiRated</h1>
        <form class="clearfix mb-4" action="GET">
          <label for="drinkCategory">What type of alchoholic beverage would you like to search for?</label>
          <select name="drinkCategory" id="drinkCategorySelect">
            <option value="Wine">Wine</option>
            <option value="Beer">Beer</option>
            <option value="Rum">Rum</option>
            <option value="Vodka">Vodka</option>
            <option value="Vodka">Tequila</option>
            <option value="Whiskey">Whiskey</option>
            <option value="Scotch">Scotch</option>
            <option value="Gin">Gin</option>

          </select>

          <label for="searchCategory">What would you like to search by?</label>
          <select name="searchCategory" id="searchCategorySelect">
            <option value="nameOfBeverage">Name of Beverage</option>
            <option value="brewer">Brewer</option>
            <option value="rating">Highest Rated</option>
          </select>

         <div class="form-group">
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Manufacturer/Brewer/Distillery">
      </div>

       <div class="form-group">
            <input type="text" id="alcohol-name" class="form-control" aria-describedby="example-text" placeholder="Name">
      </div>
          
          
          <button id="submit" class="btn btn-primary float-right">Search</button>
        </form>
      </div>
    </div>
  </div>
</div>

