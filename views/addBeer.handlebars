<div class="add-beer-image">
  <div class="add-beer-text">
    <h1 style="font-size: 50px">Rate a Beer!</h1>
    <p>Add a new beer to your collection or rate a previous one!</p>
    <a class="btn btn-primary" href="/">Home</a>
    <a class="btn btn-primary" href="/wine">Wine List</a>
    <a class="btn btn-primary" href="/whiskey">Whiskey List</a>
  </div>
</div> 
 
 <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
          <div class="beer-container">
            <form method="POST" id="addBeer" role="form">

                <div class="form-group questions">
                    <label for="name">Enter Name</label>
                    <input type="text" class="form-control" id="name" placeholder="">
                </div>

                <div class="form-group questions">
                    <label for="link-to-picture">Enter Brewer</label>
                    <input type="text" class="form-control" id="brewer">
                </div>

                <div class="form-group questions">
                    <label for="link-to-picture">Enter Style</label>
                    <input type="text" class="form-control" id="style">
                </div>

                <div class="form-group questions">
                    <label for="link-to-picture">Enter ABV</label>
                    <input type="number" class="form-control" id="abv">
                </div>

                <div class="form-group questions">
                    <label for="link-to-picture">Enter IBU</label>
                    <input type="text" class="form-control" id="ibu">
                </div>

                <div class="form-group questions">
                    <label for="link-to-picture">Enter rating</label>
                    <input type="number" min="1" max="10" class="form-control" id="rating">
                </div>

                <button type="button" class="btn btn-primary" id="createBeer">
                    <span class="fa fa-beer">Rate a Beer!</button>

            </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/index.js"></script>
<script src="/public/js/beerFrontEnd.js" type="text/javascript"></script>
