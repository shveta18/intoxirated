<h1>Rate a Beer!</h1>

<form method="POST" role="form">

    <div class="form-group questions">
        <label for="name">Enter Name</label>
        <input type="text" class="form-control" id="name">
    </div>

    <div class="form-group questions">
        <label for="link-to-picture">Enter Brewer</label>
        <input type="text" class="form-control" id="brewer">
    </div>

    <div class="form-group questions">
        <label for="link-to-picture">Enter Style</label>
        <input type="text" class="form-control" id="style">
    </div>

    <div class="form-group questions">
        <label for="link-to-picture">Enter ABV</label>
        <input type="number" class="form-control" id="abv">
    </div>

	<div class="form-group questions">
        <label for="link-to-picture">Enter IBU</label>
        <input type="text" class="form-control" id="ibu">
    </div>

    <div class="form-group questions">
        <label for="link-to-picture">Enter rating</label>
        <input type="number" min="1" max="10" class="form-control" id="rating">
    </div>

    <button type="button" class="btn btn-warning" id="createBeer">
		<span class="fa fa-beer">Rate a Beer!</button>

</form>

<script src="/js/index.js"></script>
<script src="/public/js/beerFrontEnd.js" type="text/javascript"></script>
